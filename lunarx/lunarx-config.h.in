#if !defined(LUNARX_INSIDE_LUNARX_H) && !defined(LUNARX_COMPILATION)
#error "Only <lunarx/lunarx.h> can be included directly, this file may disappear or change contents"
#endif

#ifndef __LUNARX_CONFIG_H__
#define __LUNARX_CONFIG_H__

#include <glib-object.h>

G_BEGIN_DECLS

#define LUNARX_MAJOR_VERSION @LUNAR_VERSION_MAJOR@
#define LUNARX_MINOR_VERSION @LUNAR_VERSION_MINOR@
#define LUNARX_MICRO_VERSION @LUNAR_VERSION_MICRO@

#define LUNARX_CHECK_VERSION(major,minor,micro) \
  (LUNARX_MAJOR_VERSION > (major) \
   || (LUNARX_MAJOR_VERSION == (major) \
       && LUNARX_MINOR_VERSION > (minor)) \
   || (LUNARX_MAJOR_VERSION == (major) \
       && LUNARX_MINOR_VERSION == (minor) \
       && LUNARX_MICRO_VERSION >= (micro)))

extern const guint lunarx_major_version;
extern const guint lunarx_minor_version;
extern const guint lunarx_micro_version;

const gchar *lunarx_check_version (guint required_major,
                                    guint required_minor,
                                    guint required_micro);

/* verify that G_GNUC_WARN_UNUSED_RESULT is defined */
#if !defined(G_GNUC_WARN_UNUSED_RESULT)
#if __GNUC__ > 3 || (__GNUC__ == 3 && __GNUC_MINOR__ >= 4)
#define G_GNUC_WARN_UNUSED_RESULT __attribute__((warn_unused_result))
#else
#define G_GNUC_WARN_UNUSED_RESULT
#endif /* __GNUC__ */
#endif /* !defined(G_GNUC_WARN_UNUSED_RESULT) */

G_END_DECLS

#endif /* !__LUNARX_CONFIG_H__ */
